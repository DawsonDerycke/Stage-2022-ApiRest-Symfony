{% extends 'base.html.twig' %}

{% block title %}Edit Sku{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/build/app.css">
{% endblock %}
{% block body %}
    <h2 style="width: 15%;margin: 60px 0px 40px 37%;" class="text-center d-block p-2 bg-dark text-white"> Edit Sku </h2>
    <div style="width: 40%;margin-left: 25%" class="text-center d-block p-2 border border-5 border-dark">
        {{ form_start(form) }}
            {{ form_rest(form) }}
            <div class="text-end me-5 pe-5 pt-4 pb-3">
                <a class="btn btn-primary" href="{{ path('get_all_sku') }}" role="button">Back</a>
                <button class="btn btn-success">{{ button_label|default('Update') }}</button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}